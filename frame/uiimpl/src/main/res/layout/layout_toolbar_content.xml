<?xml version="1.0" encoding="utf-8"?>
<com.github.robining.uiimpl.toolbar.ToolbarContainerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/uiTitleBarHeight">

    <LinearLayout
        android:id="@+id/tv_titlebar_left_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left|center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/btn_titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="30dp"
            android:scaleType="centerInside"
            android:src="?attr/uiTitleBarBackButtonResource"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_titlebar_title"
        style="?attr/uiTitleBarTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:singleLine="true"/>

    <LinearLayout
        android:id="@+id/tv_titlebar_right_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right|center_vertical"
        android:orientation="horizontal"/>
</com.github.robining.uiimpl.toolbar.ToolbarContainerView>