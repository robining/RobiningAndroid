<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TransparentDialogStyle" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="TranslucentDialogStyle" parent="@style/Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_bg_toast_or_dialog</item>
    </style>

    <style name="BottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_bottom_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_bottom_dialog_out</item>
    </style>

    <style name="RightDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_right_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_right_dialog_out</item>
    </style>
</resources>